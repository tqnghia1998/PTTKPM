        <!--DataGrid danh sách sản phẩm-->
        <DataGrid ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
               FontFamily="Sitka Subheading"
                Background="Transparent" 
                AutoGenerateColumns="False"  
                CanUserAddRows="False" 
                CanUserDeleteRows="False" 
                CanUserReorderColumns="False" 
                Grid.Row="2" 
                Grid.ColumnSpan="3" 
                  FontSize="14"
                  IsReadOnly="True"
                x:Name="spListTask"
                SelectionMode="Single"
                 >

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridCell_PreviewMouseLeftButtonDownProduct"></EventSetter>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <!--<DataGridTemplateColumn Header="Tên bài tập" Width="200">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ProductSource}" Height="150"></Image>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->

                <DataGridTextColumn       
                        Header="Tên bài tập"
                        Binding="{Binding Path=taskname}"
                        Width="2*">
                </DataGridTextColumn>

                <DataGridTextColumn 
                        Header="Môn"
                        Width="2*"
                        Binding="{Binding Path=subjectname}">
                </DataGridTextColumn>

                <DataGridTextColumn 
                        Header="Hạn chót"
                        Width="1*"
                        Binding="{Binding Path=deadline}">
                </DataGridTextColumn>

                <DataGridTemplateColumn Width="3*" Header="Tiến độ">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Slider
                                    Name="progressSlider"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="{Binding progress}"
                                    Style="{StaticResource MaterialDesignDiscreteSlider}"
                                    Margin="10,0,10,0"
                                    Width="300"
                                    ValueChanged="ProgressSlider_ValueChanged"
                                 />
                            </StackPanel>
                            
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn Width="1*">

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">

                                <Button Width="45" Height="45" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Foreground="Black" Margin="0,0,2,0" Name="editTask" Click="EditTask_Click">
                                    <materialDesign:PackIcon Kind="Edit" />
                                </Button>

                                <Button Width="45" Height="45" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Foreground="Black" >
                                    <materialDesign:PackIcon Kind="Close" />
                                </Button>

                                <!--<Button Width="20" Height="20" Background="Transparent"  Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Click="DeleteProductButton_Click" Margin="40,0,0,0">
                                    <materialDesign:PackIcon Foreground="IndianRed" Kind="Close" Height="15" Width="15"/>
                                </Button>-->

                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
